---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="icon" href="/favicon.ico" />
        <!-- <link rel="preconnect" href="https://fonts.googleapis.com" /> -->
        <!-- <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin /> -->
        <!-- <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@800&family=Source+Code+Pro:wght@500&display=swap" rel="stylesheet" /> -->
    </head>
    <body
        class="text-black dark:text-white bg-gradient-to-tl from-slate-100 to-zinc-100 dark:from-stone-900 dark:to-slate-900 transition-all"
    >
        <slot />
    </body>
</html>
