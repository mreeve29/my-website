---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import ProjectsDisplay from "../components/ProjectsDisplay.astro";
import Footer from "../components/Footer.astro";
import Data from "../data/data.json";
import HeaderReact from "../components/HeaderReact";

const { projects } = Data;
---

<Layout title="Michael Reeve - Projects">
    <HeaderReact activePath={"projects"} client:load/>
    <main class="w-full sm:max-w-screen-2xl m-auto mt-0">
        <Section title="Projects">
            <ProjectsDisplay projects={projects} />
        </Section>
    </main>
    <Footer />
</Layout>

<style>
    html,
    body {
        padding: 0;
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen,
            Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    * {
        box-sizing: border-box;
    }
</style>
