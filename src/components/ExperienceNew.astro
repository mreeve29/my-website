---
export interface Job {
    company: string;
    shortCompany: string;
    title: string;
    startDate: string;
    endDate: string;
    location: string;
    icon: string;
    description: string[];
}

const { experiences } = Astro.props;
---

<div class="flex flex-col sm:flex-row">
    <div>
        {
            experiences.map((j: Job) => (
                <div class="pb-5 text-white">
                    <div class="text-lg md:text-xl lg:text-2xl">
                        <span class="font-bold">{j.title}</span> at{" "}
                        {j.company}
                    </div>
                    <div class="mb-2">
                        {j.startDate} - {j.endDate}
                    </div>
                    <ul class="list-disc list-outside pl-4">
                        {j.description.map((line) => (
                            <li class="mb-2">{line}</li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</div>
