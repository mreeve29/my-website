---
import "@fontsource/raleway/800.css"

const { name } = Astro.props;
---

<div class="flex justify-center items-center pt-10">
    <div>
        <div class="text-2xl sm:text-4xl">Hello, I am</div>
        <div class="my-name text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-blue-500 text-5xl sm:text-7xl md:text-8xl lg:text-9xl">{name}</div>
    </div>
</div>


<style>
    .my-name{
        font-family: 'Raleway', sans-serif;
        font-weight: 1200;
    }
</style>