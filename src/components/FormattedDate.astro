---
export interface Props {
    date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="text-lg font-bold">
    {
        date.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
        })
    }
</time>